<div class="container">
  <div class="row">
    <div class="form-group col-md-3"></div>

    <div class="form-group col-md-5">
      <h1> Add Gamer Tag  </h1>
        <%= form_for @gamertag do |f| %>
        <h5>Gamer Tag:</h5> <%= f.text_field :name, placeholder: "Gamer Tag", :class => "form-control" %>
        <h5>Platform:</h5> <%= f.select(:platform, ['Xbox', 'Playstation', 'Steam / PC', 'IOS Game Center', 'Android Play Games',  ], {}, { :class => 'form-control' }) %>
        <h5>Server:</h5> <%= f.text_field :server, placeholder: "Server", :class => "form-control" %>
        <h5>Username:</h5> <%= f.text_field :username, placeholder: "other usernames", :class => "form-control" %>
        <h5>Games n Details:</h5> <%= f.text_field :game, placeholder: "Games, details, clan names, groups, info", :class => "form-control" %> <br>
        
        
        <%= f.submit "Add", :class => "btn btn-primary" %>

        <%= link_to "Cancel", gamertags_path,  :class => "btn btn-primary" %>



      <% end %>
      <%= link_to "Gamer Tags", gamertags_path %>

    </div>
    <div class="form-group col-md-4"></div>
  </div>
</div>