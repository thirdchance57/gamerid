<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h1>Gamer Tags List</h1>
    <%= link_to "Add Gamer Tag", gamertags_new_path %>

    <table class="table">
      <th><%= link_to "Show All", gamertags_path(gamertagfilter:"showall") %></th>
      <th><%= link_to "Xbox",  gamertags_path(gamertagfilter:"Xbox") %></th>
      <th><%= link_to "Playstation", gamertags_path(gamertagfilter:"Playstation") %></th>
      <th><%= link_to "Steam / PC",  gamertags_path(gamertagfilter:"Steam / PC") %></th>
      <th><%= link_to "IOS Game Center", gamertags_path(gamertagfilter:"IOS Game Center") %></th>
      <th><%= link_to "Android Play Games", gamertags_path(gamertagfilter:"Android Play Games") %></th>
    </table>

    <table class="table table-striped">
      <caption>Gamer Tag Database</caption>
      <thead>
        <tr>
          
          <th>Gamer Tag</th>
          <th>Platform</th>
          <th>Server</th>
          <th>Game</th>
          <th>User Profile</th>

        </tr>
      </thead>
      <tbody>
      	<% @gamertags.each do |b| %>

          <tr>
            
            <td><%= link_to b.name, gamertag_path(b) %></td>
            <td><%= b.platform %></td>
            <td><%= b.server %></td>
            <td><%= b.game %></td>
            <% @users.each do |u|%>
              <% if u.id == b.user_id %>
                <td><%= link_to u.first_name, user_path(u)%></td>
              <% end%>

            <% end%>
            <td><%= link_to "Edit", edit_gamertag_path(b) %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table>

    <ul class="pagination">
      <li class="disabled"><a href="#">&laquo;</a></li>
      <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
    </ul>
    
  </div>
  <div class="col-md-1"></div>
</div>