<div class="container">
  <div class="row">
    <div class="form-group col-md-3"></div>

    <div class="form-group col-md-5">
    <h1> Profile </h1>

    <%= @user.photos.each do |p| %>
      <%= image_tag p.image.url(:small) %><br>
    <% end %>

    <%= link_to "upload profile photo", new_photos_path%>
     
      <p> <br> 
        email address: <%= @user.email %> <br>
        Name: <%= @user.first_name %> <%= @user.last_name %> <br>
        Zipcode: <%= @user.zipcode %> <br>
        </p>
      <%= link_to "Edit User", edit_user_path %> <br>
      <%= link_to "Back", users_path %> <br>
      <%= link_to "Delete", delete_user_path(@user), :method => :delete %>
    </div>
    <div class="form-group col-md-3"></div>
  </div>
</div>
