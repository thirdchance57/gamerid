<div class="container">
	<div class="row">
		<div class="form-group col-md-2"></div>

    <div class="form-group col-md-4">
      <h1> Profile <%= @user.first_name %> <%= @user.last_name %></h1>
            <h2><%= link_to " Add Gamer Tag", gamertags_new_path %></h2>

      <% @user.photos.each do |p| %>
        <%= image_tag p.image.url(:medium) %><br>
      <% end %>

      <%= link_to "upload profile photo", new_photos_path%>
     
      <p> <br> 
        email address: <%= @user.email %> <br>
        Name: <%= @user.first_name %> <%= @user.last_name %> <br>
        Zipcode: <%= @user.zipcode %> <br>
        </p>
      <%= link_to "Back", users_path %> <br>
      <%= link_to "Delete", delete_user_path(@user), :method => :delete %>
    </div>

		<div class="form-group col-md-4">
    	<h1> User Profile Edit </h1>

      <!-- invalid edit -->
  	<% if flash[:notice] %>
      <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% end %>

    <!-- successfull edit -->
    <% if flash[:alert] %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <%= flash[:alert] %>
      </div>
    <% end %>
      
	  	<%= form_for @user do |f| %>
	    	<h5>First Name:</h5> <%= f.text_field :first_name, :class => "form-control" %><br>
	    	<h5>Last Name:</h5> <%= f.text_field :last_name, :class => "form-control" %><br>
	    	<h5>Email:</h5> <%= f.text_field :email, :class => "form-control" %><br>
	    	<h5>Zipcode:</h5> <%= f.number_field :zipcode, :class => "form-control" %><br>
	    
	    <%= link_to "Cancel", gamertags_path,  :class => "btn btn-primary" %>
	    <%= f.submit "Edit User", :class => "btn btn-primary" %> <br>
	    <% end %>


	    <br>
    	<%= link_to "Upload Photo", new_photos_path%>	<br>
	    <%= link_to "Delete", delete_user_path(@user), :method => :delete %> <br>
	    <%= link_to "Back", :back %> <br>
	
		</div>

		<div class="form-group col-md-2"></div>
	</div>
</div>
  


