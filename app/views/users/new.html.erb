<div class="container">
  <div class="row">
    <div class="form-group col-md-4"></div>

    <div class="form-group col-md-4">
    <h1> Sign Up Page </h1>

      <%= form_for @user do |f| %>
        <h5>First Name:</h5> <%= f.text_field :first_name, :class => "form-control" %>
        <h5>Last Name:</h5> <%= f.text_field :last_name, :class => "form-control" %>
        <h5>Email:</h5> <%= f.text_field :email,:class => "form-control" %>
        <h5>Zipcode:</h5> <%= f.number_field :zipcode, :class => "form-control" %>
        <h5>Password:</h5> <%= f.password_field :password, :class => "form-control" %>
        <h5>Repeat Password:</h5> <%= f.password_field :password_confirmation, :class => "form-control" %> <br>

        <%= link_to "Cancel", gamertags_path, :class => "btn btn-primary" %>
        <%= f.submit "Sign Up", :class => "btn btn-primary"  %>

      <% end %>

      <%= link_to "User List", users_path %>
    </div>

    <div class="form-group col-md-4"></div>
  </div>
</div>

