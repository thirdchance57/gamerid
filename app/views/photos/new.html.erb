<div class="container">
  <div class="row">
    <div class="form-group col-md-4"></div>

    <div class="form-group col-md-4">
      <h3>Upload Photo to <br><%= current_user.first_name %>'s Profile</h3>
      <h4> </h4>
 
      <%= form_for @photo do |f| %>
        <%= f.file_field :image%>
        <br>
        <%= f.submit "Upload", :class => "btn btn-default btn-xs"%>
      <% end %>
      <br>
      <%= link_to "Back", :back %> <br>
    </div>
    <div class="form-group col-md-4"></div>
  </div>
</div>

